<%= render "layouts/hero" %>
<div class="event-index container-l ">
    <div class="events-today container mb-5">
        <h1><u>Today's Events</u></h1>
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4 ">
            <% @events.current.each do |event|%>
                <div class="col d-flex align-items-stretch">
                    <%= render partial: "layouts/card", locals: {zone: :event} %>
                </div>
                <br>
            <% end %>
        </div>
    </div> 

    <div class="events-today container mb-5">
        <h1><u>Future Events</u></h1>
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4 ">
            <% @events.future.each do |event|%>
                <div class="col d-flex align-items-stretch">
                    <div class="card" style="">
                        <% if event.event_header.attached? %>
                          <%= image_tag(event.event_header.representation(resize_to_limit: [500, 500])) %>
                          <% else %>
                          <%= image_tag("default-event-header.jpg")  %>
                        <% end %>
                        <div class="card-body">
                            <h5 class="card-title"><b><%= event.title%></b></h5>
                            <p class="card-text"><%= event.description%></p>
                            <p class="card-text"><em><%= event.event_date.strftime("%B %d, %Y")  %> @ <%= event.event_time.strftime("%I:%M %p")%> </em></p>
                             <p>Created By: <%= link_to (event.creator.first_name), user_path(event.creator.id)%></p>
                            <%= button_to "Event Page", event_path(event.id), method: :get, class: "btn btn-primary btn-lg mt-4" %>
                        </div>
                    </div>
                </div>
                <br>
            <% end %>
        </div>
    </div>   
    
</div>
