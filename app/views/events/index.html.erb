

<div  class="event-hero container-fluid mb-4">
    <div class="row h-100">
        <div class="event-hero-content col-6 align-self-center ">
            <h1 class="event-hero-header display-1">thyme//capsule</h1>
            <h2 class="event-hero-description display-5 fst-italic " >Where events are created and remembered</h2>
             <%= button_to "Log In", new_user_session_path, method: :get, form_class: "hero-button btn btn-primary btn-lg mt-4"  %>
        </div>
    </div>
    <div class="row" >
       
    </div>
</div>

<h2>Upcoming Events: </h2>
<% @events.future.each do |event|%>
    <%= link_to event.title, event_path(event.id)%>
    <% this_event = event.id %>
    <br>
<% end %>

<h2>Today's Events: </h2>
<% @events.current.each do |event|%>
    <%= link_to event.title, event_path(event.id)%>
    <% this_event = event.id %>
    <br>
<% end %>

<h2>Past Events: </h2>
<% @events.past.each do |event|%>
    <%= link_to event.title, event_path(event.id)%>
    <% this_event = event.id %>
    <br>
    
<% end %>
