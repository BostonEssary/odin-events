
<div class="container text-center">
  <div class="row vh-100 justify-content-center ">
    <div class="col-10 col-md-10 m-4 align-self-center bg-white p-4 justify-content-center align-items-center d-flex flex-column rounded text-start">
      <h1 class="">Edit your thyme//capsule</h1>
      <%= form_with model: @event, method: :patch do |form| %>
        <%= form.label :title, "Title: "%>
        <br>
        <%= form.text_field :title %>
        <br>
        <br>
        <%= form.label :description, "Description: "%>
        <br>
        <%= form.text_area :description, size: "60x10" %>
        <br>
        <br>
        <div class="my-1">
          <%= form.label :event_date, "Date: "%>
          <br>
          <%= form.date_select :event_date %>
        </div>
        <br>
        <div class="my-1">
        <%= form.label :event_time, "Time: " %>
        <br>
        <%= form.time_select :event_time, {ampm: true} %>
        </div>
        <br>
        <div class="my-1">
        <%= form.label :event_header, "Picture: " %>
        <br>
          <%= form.file_field :event_header %>
          </div>
        <br>
        <%= form.submit %>
      <% end %>
      <% @event.errors.each do |error|%>
        <li class="text-danger m-2"><%= error.full_message%></li>
      <% end %>
    </div>
  </div>
</div>